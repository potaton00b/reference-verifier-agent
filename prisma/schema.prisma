// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Citation {
  id        String   @id @default(cuid())
  title     String
  author    String?
  year      Int?
  url       String?
  excerpt   String   @db.Text
  fullText  String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
}
